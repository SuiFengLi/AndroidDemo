<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    tools:context="com.androidy.azsecuer.activity.SoftManagerActivity">

    <include layout="@layout/include_home_actionbar"/>
   <include layout="@layout/include_soft_manager"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/builtSpace"/>
    <com.androidy.azsecuer.view.BatteryProgressBarMove
        android:id="@+id/pb_built_space"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:progressDrawable="@drawable/pb_soft_manager_bg"
        android:layout_marginLeft="10dp"
        android:max="100"
        android:progress="30"/>
    <TextView
        android:id="@+id/tv_built_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/externalSpace"/>
    <com.androidy.azsecuer.view.BatteryProgressBarMove
        android:id="@+id/pb_external_space"
        style="?android:progressBarStyleHorizontal"
        android:progressDrawable="@drawable/pb_soft_manager_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:max="100"
        android:progress="30"/>
    <TextView
        android:id="@+id/tv_external_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        />
    <ListView
        android:id="@+id/lv_soft_manager"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
