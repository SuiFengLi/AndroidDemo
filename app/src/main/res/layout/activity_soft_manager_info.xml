    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidy.azsecuer.activity.SoftManagerInfoActivity">

    <include layout="@layout/include_home_actionbar"/>
    <ListView
        android:id="@+id/lv_soft_manager_info"
        android:layout_width="match_parent"
