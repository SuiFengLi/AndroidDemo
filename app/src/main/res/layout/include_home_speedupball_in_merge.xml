<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- 内部圆弧图像 -->

    <ImageView
        android:id="@+id/iv_speedup_inball"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/home_score_bg" />

    <!-- 内部圆弧图像: 手机加速文本 -->

    <TextView
        android:id="@+id/tv_speedup_inball_speedup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_speedup_inball"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/homeclear_text"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="手机加速"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- 内部圆弧图像: 使用率文本 -->

    <TextView
        android:id="@+id/tv_speedup_inball_usageRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="40dp"
        android:text="00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="64sp"
        android:textStyle="bold" />

    <!-- 内部圆弧图像: % -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_speedup_inball_usageRate"
        android:layout_alignBottom="@+id/tv_speedup_inball_usageRate"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/tv_speedup_inball_usageRate"
        android:text="%" />

</merge>